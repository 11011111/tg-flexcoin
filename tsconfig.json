{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "isolatedModules": false
  },
  "plugins": ["@vue/language-plugin-pug"]
}
